rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read/write their own images
    match /desktopImages/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read/write their own images (legacy path)
    match /images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read/write their own 3D models
    match /desktop-3d-models/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
